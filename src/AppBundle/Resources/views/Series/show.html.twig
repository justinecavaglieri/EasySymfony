{% extends '::layout.html.twig' %}

{% block content -%}
    <h1>Series</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ series.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ series.name }}</td>
            </tr>
            <tr>
                <th>Releasedat</th>
                <td>{{ series.releasedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ series.summary }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ series.picture }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ series.country }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('series') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('series_edit', { 'id': series.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
